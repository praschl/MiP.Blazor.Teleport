<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <Version>0.1.0</Version>
    <Description>Makes it easy to render a RenderFragment (part of a Component) outside of the current render tree. Use the &lt;Beam To="My.target"&gt; component to "beam" its content to &lt;Materializer Name="My.target"&gt;, no matter where in the render tree the Materializer is placed.</Description>
    <Company />
    <Authors />
    <Product />
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>blazor teleport component portal</PackageTags>
    <PackageReleaseNotes>First release, don't expect the impossible :-)</PackageReleaseNotes>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.1" />
  </ItemGroup>

</Project>
